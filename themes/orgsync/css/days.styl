@import 'config'

.osw-events-index.js-list-view
  .osw-days-show
    .short-date
      display none
    .long-date
      position -webkit-sticky
      position sticky
      top 0
      padding 20px 5px 5px
      color #666
      font-size 16px
      border-bottom 1px solid #ccc
      background #fff
.osw-events-index.js-month-view
  .osw-days-show
    display inline-block
    box-sizing border-box
    border 5px solid #fff
    border-top none
    border-bottom none
    width 14.28%
    vertical-align top
    height 16.67%
    &.js-current-month .short-date
      opacity 1
    &:before
      display block
      content ''
      border-top 1px solid #ccc
    &.js-current-week:before
      border-width 3px
      border-color #f99
    &.js-today
      &
      .short-date
        background #fee
      &:before
        border-top-color #f66
    .list
      margin-top -5px
    .long-date
      display none
    .short-date
      padding 5px
      text-align right
      font-size 14px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      opacity .25
