@import 'config'

.osw-events-index.js-list-view
.osw-events-index.js-month-view:not([min-width~='751px'])
  .osw-days-show
    &.js-empty
      display none
    .short-date
      display none
    .long-date
      position -webkit-sticky
      position sticky
      top 0
      padding 10px
      background #ccc
.osw-events-index.js-month-view[min-width~='751px']
  .osw-days-show
    display inline-block
    box-sizing border-box
    border 5px solid #fff
    border-top none
    border-bottom none
    width 14.28%
    vertical-align top
    height 200px
    opacity .25
    transition opacity .25s ease-in-out
    &.js-active-month
      opacity 1
    &:before
      display block
      content ''
      border-top 1px solid #ccc
    &.js-current-week:before
      border-width 3px
      border-color #f99
    &.js-today
      &
      .short-date
        background #fee
      &:before
        border-top-color #f66
    .list
      margin-top -5px
    .long-date
      display none
    .short-date
      padding 5px
      text-align right
      font-size 14px
