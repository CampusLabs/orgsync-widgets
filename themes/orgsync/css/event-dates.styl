@import 'config'

.osw-events-index.js-list-view
.osw-events-index.js-month-view:not([min-width~='751px'])
  .osw-event-dates-show
    border 1px solid #ccc
    border-bottom none
    padding 10px
    clearfix()
    &:first-child
      border-top none
    .picture-container
      float left
      width 45px
      height 45px
      img
        width 100%
    .short-time
      display none
    .title
      font-size 16px
    .long-time
    .location
      display inline
      color #666
    .long-time:after
      content ' â€¢'
    .info
      padding 5px 0 5px 10px
      overflow auto
.osw-events-index.js-month-view[min-width~='751px']
  .osw-event-dates-show
    position relative
    margin-top 5px
    font-size 11px
    &.js-continued:before
    &.js-continues:after
        top 50%
        margin-right -5px
        margin-top -5px
        position absolute
        width 0
        height 0
        content ''
        border 5px solid transparent
    &.js-continued:before
        left -2px
        border-left-width 0
        border-right-color #f66
    &.js-continues:after
        right 2px
        border-right-width 0
        border-left-color #f66
    .location
    .picture-container
    .long-time
      display none
    .short-time
      float right
      padding 0 5px
      color #999
    .title
      padding-left 5px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
