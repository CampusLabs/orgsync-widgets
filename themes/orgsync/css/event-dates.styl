@import 'config'

.osw-events-index.js-list-view
  .osw-event-dates-show
    border 1px solid #ccc
    border-bottom none
    padding 10px
    clearfix()
    &:first-child
      border-top none
    .picture-container
      float left
      width 45px
      height 45px
      img
        width 100%
    .short-time
      display none
    .title
      font-size 16px
    .long-time
    .location
      display inline
      color #666
    .long-time:after
      content ' \2022'
    .info
      padding 5px 0 5px 10px
      overflow auto
.osw-events-index.js-month-view
  .osw-event-dates-show
    position relative
    margin-top 5px
    border 0 solid #f66
    border-left-width 5px
    padding 2px 5px
    font-size 11px
    box-sizing border-box
    &.js-continues
    &.js-continued
    &.js-all-day
      background #f9f9f9
    &.js-continues
      padding-right 10px
      margin-right -5px
      &:not(.js-continued)
        border-radius left 5px
    &.js-continued
      margin-left -5px
      padding-left 10px
      border-left-width 0
      &:not(.js-continues)
        border-radius right 5px
    &.js-continued:not(.js-first-dow) .title
      visibility hidden
    &.js-all-day .short-time
      display none
    .location
    .picture-container
    .long-time
      display none
    .short-time
      float right
      padding-left 5px
      max-width 100%
      color #999
    .short-time
    .title
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
