@import 'config'

.osw-events-index.js-list-view
.osw-events-index.js-month-view:not([min-width~='751px'])
  .days-of-week
    display none
.osw-events-index.js-month-view[min-width~='751px']
  .days-of-week
    position -webkit-sticky
    position sticky
    z-index 1
    top 0
    background #fff
    .js-day-container
      display inline-block
      box-sizing border-box
      width 14.28%
      padding 0 5px
    .js-day
      border-bottom 1px solid #ccc
      padding 5px 5px
      text-align right
      font-weight bold
      font-size 14px
