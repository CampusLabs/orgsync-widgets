@import 'config'

.orgsync-widget.osw-news-posts-index
.orgsync-widget.osw-news-posts-show
  .list-item
    margin 0 auto
    padding 10px
    max-width 580px
  a
    color #0076a3
    text-decoration none
    &:hover
      text-decoration underline
  .thumbnail
    float right
    margin 0 0 10px 10px
  .title
    display block
    font-weight bold
    font-size 16px
  .creator
    display inline
    font-weight bold
    &:before
      font-weight normal
      content 'Posted by '
  .time
    display inline
    white-space nowrap
  .comment-count
    display inline
    white-space nowrap
    &.none
      display none
    &:before
      content 'with '
    &:after
      content ' Comment'
    &.plural:after
      content ' Comments'
  .body
    margin 10px 0
.orgsync-widget.osw-news-posts-show
  text-align left
  padding 10px
  max-width 580px
