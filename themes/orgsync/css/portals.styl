@import 'config'

.osw-portals-browse
  .filters
    margin 5px 5px 0
  .search-input
  .umbrella-selector
  .category-selector
  .matchers
    margin 5px 0
  .search-input
    outline 0
    padding 10px
    width 100%
    height 42px
    font-size 14px
    box-sizing border-box
    border 1px solid #aaa
    box-shadow 0 1px 3px rgba(0, 0, 0, .1) inset;
  .umbrella-selector
  .category-selector
    width 100%
  .select2-dropdown-open .select2-choice
    border-color #5897fb
  .select2-choice
    height 40px
    line-height 40px
    border-radius 0
    border-color #aaa
    &
    .select2-arrow
      border-radius 0
      b
        position relative
        top 7px
    .select2-search-choice-close
      top 14px
  .select2-offscreen
    display none
  .select2-chosen
    font-weight bold
    font-size 14px
    color #333
  .matchers
    display none
  .list
    margin-top 5px
  .list-item
    vertical-align top
    border-top 1px solid #ccc
    a
      display block
      text-decoration none
      &:hover
      &:focus
        .name
          color #0076a3
    img
      float left
      margin-right 10px
      width 75px
    .info
      padding 10px
      min-height 55px
    .name
      word-wrap break-word
      color #2b2b2b
      font-size 16px
    .umbrella
      display none
    .category
      box-sizing border-box
      color #999
      overflow-x hidden
      text-overflow ellipsis
      white-space nowrap
  .no-results
    margin 5px
    padding 10px
    font-size 14px
    background #fff
    p
      margin-bottom 10px
    strong
      font-weight bold
    ul
      margin 0 0 10px 20px
      list-style disc
.osw-portals-browse[min-width~='480px']
  .list
    margin-top 0
  .list-item
    display inline-block
    box-sizing border-box
    border 5px solid transparent
    width 33.33%
    vertical-align top
    background #fff
    a
      box-shadow 0 1px 3px rgba(0, 0, 0, .25)
      &:hover
      &:focus
        box-shadow 0 1px 5px #0076a3
    img
      float none
      display block
      width 100%
    .name
      color #2b2b2b
      font-size 16px
      min-height 80px
    .umbrella
      display none
    .category
      color #999
      overflow-x hidden
      text-overflow ellipsis
      white-space nowrap
.osw-portals-browse[min-width~='640px']
  .search-input
  .umbrella-selector
  .category-selector
    display inline-block
    width 33.33%
    vertical-align middle
    box-sizing border-box
  .search-input
  .umbrella-selector:not(.select2-dropdown-open) .select2-choice
    border-right-width 0
  .matchers
    display block
    .matcher
      padding 5px 0
      width 3.25%
      box-sizing border-box
      &:not(:last-child)
        border-right none
      &:first-child
        width 6%
      &:last-child
        width 9.5%
  .list-item
    width 25%
.osw-portals-browse[min-width~='800px']
  .list-item
    width 20%
.osw-portals-browse[min-width~='960px']
  .list-item
    width 16.67%

.orgsync-widget .osw-portals-show
  padding 10px 10px 0
  clearfix()
  .loading
    margin-bottom 10px
  img
    float right
    width 150px
    margin-left 10px
    margin-bottom 10px
    border-top-right-radius 3px
  .info
    width 500px
    text-align left
    margin-bottom 10px
    .name
      color #0076a3
      font-size 20px
    .umbrella
      font-weight bold
      font-size 14px
    .category
      font-size 14px
      margin-bottom 10px
    .description
      margin-bottom 10px
    a
      text-decoration none
      color #0076a3
